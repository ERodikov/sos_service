<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2" 
        android:orientation="vertical">
		<Button
			  android:id="@+id/btn_hot_call_1"
			  style="@style/CustomStyleButton"
			  android:layout_width="fill_parent"
			  android:layout_height="fill_parent"
			  android:onClick="onHotCallOneClick"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2" 
        android:orientation="vertical">
		<Button
			  android:id="@+id/btn_hot_call_2"
			  style="@style/CustomStyleButton"
			  android:layout_width="fill_parent"
			  android:layout_height="fill_parent"
			  android:onClick="onHotCallTwoClick"/>
    </LinearLayout>
  	<LinearLayout	
        android:id="@+id/ll3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3" 
        android:orientation="vertical">
		<Button
			  android:id="@+id/btn_hot_call_cancel"
			  style="@style/CustomStyleButton"
			  android:layout_width="fill_parent"
			  android:layout_height="fill_parent"
			  android:text="@string/btnHotCallCancel"
			  android:onClick="onHotCallCancelClick"/>
    </LinearLayout>
</LinearLayout>